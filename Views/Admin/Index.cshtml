@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Admin Panel</h1>
            <p class="lead">Manage your application settings and data</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">Add, edit, or remove users from the system.</p>
                    <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-primary">Go to User Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Roles</h5>
                    <p class="card-text">Define and assign roles to users.</p>
                    <a href="@Url.Action("RoleManagement", "Admin")" class="btn btn-primary">Go to Role Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Recipes</h5>
                    <p class="card-text">Add, edit, or remove recipes from the system.</p>
                    <a href="@Url.Action("RecipeManagement", "Admin")" class="btn btn-primary">Go to Recipe Management</a>
                </div>
            </div>
        </div>
    </div>
</div>
