@model IEnumerable<RecipeWebbApplication.Models.CartItem>

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShopItem?.Name</td>
                <td>@item.ShopItem?.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.ShopItem?.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.Sum(item => item.ShopItem?.Price * item.Quantity)</p>

<a asp-controller="Checkout" asp-action="Index" class="btn btn-primary">Proceed to Checkout</a>
